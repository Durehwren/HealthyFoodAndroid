<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".recipespage">

    <EditText
        android:id="@+id/recipe_search_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Search for a recipe..."
        android:padding="12dp"
        android:background="@drawable/search_bar_background"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text" />


    <!-- Featured Recipes Section -->
    <TextView
        android:id="@+id/featured_recipes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured Recipes"
        android:textSize="20sp"
        android:textColor="@color/primaryTextColor"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/recipe_search_bar"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featured_recipes_recycler"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/featured_recipes_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        tools:listitem="@layout/item_recipe_card" />

    <!-- Top Favorites Section -->
    <TextView
        android:id="@+id/top_favorites_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Favorite Recipes"
        android:textSize="20sp"
        android:textColor="@color/primaryTextColor"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/featured_recipes_recycler"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_favorites_recycler"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_favorites_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        tools:listitem="@layout/item_recipe_card" />

</androidx.constraintlayout.widget.ConstraintLayout>
